<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin url="http://code.google.com/p/bzr4j/">
    <id>bzr4intellij</id>
    <name>Bzr4Intellij</name>
    <version>@BZR4INTELLIJ_VERSION@</version>
    <category>VCS Integration</category>
    <idea-version since-build="9164"/>
    <vendor>Patrick Woodworth</vendor>
    <description><![CDATA[
Integration of <a href="http://bazaar-vcs.org/">Bazaar VCS</a> for IntelliJ IDEA.
	]]></description>
    <change-notes><![CDATA[
@BZR4INTELLIJ_CHANGENOTES@
	]]></change-notes>

    <application-components>
        <component>
            <implementation-class>org.emergent.bzr4j.intellij.BzrVcsSettings</implementation-class>
        </component>
    </application-components>

    <extensions xmlns="com.intellij" defaultExtensionNs="com.intellij">
        <vcs name="Bazaar" vcsClass="org.emergent.bzr4j.intellij.BzrVcs"/>
    </extensions>

    <actions>
        <group id="BzrGroup" text="Bazaar" popup="true"
               class="org.emergent.bzr4j.intellij.action.BzrGroup">
            <action id="Bazaar.Add" class="org.emergent.bzr4j.intellij.action.AddAction"
                    text="Add"/>
            <action id="Bazaar.Foo" class="org.emergent.bzr4j.intellij.action.FooAction"
                    text="Foo"/>
            <separator/>

            <reference id="CheckinFiles"/>
            <reference id="UpdateFiles"/>
            <reference id="IntegrateFiles"/>
            <reference id="CheckStatusForFiles"/>
            <reference id="ChangesView.Rollback"/>
            <action id="Bazaar.Resolve" class="org.emergent.bzr4j.intellij.action.ResolveAction"
                    text="Resolve Conflict"/>
            <!--<action id="Bazaar.MarkResolved" class="org.jetbrains.idea.svn.actions.MarkResolvedAction"/>-->

            <reference id="Compare.SameVersion" text="Compare with BASE revision"/>
            <!--<reference id="Compare.LastVersion" text="Compare with revision at HEAD"/>-->
            <reference id="Compare.Selected"/>

            <reference id="Vcs.ShowTabbedFileHistory"/>
            <reference id="Vcs.ShowHistoryForBlock"/>
            <reference id="Annotate"/>

            <add-to-group group-id="VcsGroup" anchor="last"/>
            <add-to-group group-id="VcsGroups" anchor="last"/>
        </group>
    </actions>

</idea-plugin>
